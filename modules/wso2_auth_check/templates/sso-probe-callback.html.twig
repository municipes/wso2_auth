<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>SSO Probe</title>
  <meta name="robots" content="noindex, nofollow">
  <style>
    body { margin: 0; padding: 0; background: #f5f5f5; font-family: system-ui, sans-serif; }
    .container { display: flex; align-items: center; justify-content: center; height: 100vh; }
    .message { text-align: center; color: #666; font-size: 14px; }
  </style>
</head>
<body>
  <div class="container">
    <div class="message">
      <div>üîê Controllo autenticazione...</div>
      <div style="font-size: 12px; margin-top: 8px; opacity: 0.7;">
        Questa finestra si chiuder√† automaticamente
      </div>
    </div>
  </div>

  <script>
    (function() {
      'use strict';

      // Estrai parametri dalla query string
      const params = new URLSearchParams(window.location.search);
      const code = params.get('code');
      const state = params.get('state');
      const error = params.get('error');
      const errorDescription = params.get('error_description');

      // Debug log (se presente console)
      if (window.console && window.console.log) {
        console.log('[WSO2 SSO Probe Callback]', {
          code: code ? code.substring(0, 20) + '...' : null,
          state: state ? state.substring(0, 20) + '...' : null,
          error: error,
          error_description: errorDescription
        });
      }

      // Invia risultato al parent window
      if (window.opener && window.opener.postMessage) {
        try {
          window.opener.postMessage({
            type: 'wso2_sso_probe_result',
            code: code,
            state: state,
            error: error,
            error_description: errorDescription,
            timestamp: Date.now()
          }, window.opener.location.origin);

          // Aggiorna messaggio
          const messageEl = document.querySelector('.message');
          if (messageEl) {
            if (code) {
              messageEl.innerHTML = '<div style="color: #4CAF50;">‚úÖ Sessione trovata</div>';
            } else if (error) {
              messageEl.innerHTML = '<div style="color: #f44336;">‚ùå ' + (error === 'login_required' ? 'Nessuna sessione' : 'Errore: ' + error) + '</div>';
            }
          }

        } catch (postMessageError) {
          if (window.console && window.console.error) {
            console.error('[WSO2 SSO Probe] Error sending postMessage:', postMessageError);
          }
        }
      }

      // Chiudi la finestra dopo un breve delay
      setTimeout(function() {
        if (window.close) {
          window.close();
        }
      }, 1000);
    })();
  </script>
</body>
</html>
