{#
/**
 * @file
 * Default theme implementation for the WSO2 authentication status block.
 *
 * Available variables:
 * - environment: The current environment (staging or production).
 * - authenticated: Whether the user is authenticated with WSO2.
 * - login_url: The URL to log in with WSO2 (for anonymous users).
 * - logout_url: The URL to log out (for authenticated users).
 *
 * @ingroup themeable
 */
#}
<div class="wso2-auth-status-block">
  {% if is_admin %}
    <div class="wso2-auth-environment">
      {{ 'Environment'|t }}: <strong>{{ environment }}</strong>
    </div>
  {% endif %}

  {% if authenticated %}
    <div class="wso2-auth-status wso2-auth-authenticated">
      {{ 'You are authenticated with WSO2'|t }}
    </div>
  {% else %}
    <div class="wso2-auth-status wso2-auth-not-authenticated">
      {{ 'You are not authenticated with WSO2'|t }}
    </div>
  {% endif %}

  {% if login_url %}
    <div class="wso2-auth-login">
      <a href="{{ login_url }}" class="wso2-auth-button">{{ 'Log in with WSO2'|t }}</a>
    </div>
  {% endif %}

  {% if logout_url %}
    <div class="wso2-auth-logout">
      <a href="{{ logout_url }}" class="wso2-auth-button">{{ 'Log out'|t }}</a>
    </div>
  {% endif %}
</div>
